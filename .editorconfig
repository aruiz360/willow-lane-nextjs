# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Specific rules for Markdown files
[*.md]
trim_trailing_whitespace = false

# Specific rules for JSON, YAML, and config files
[*.{json,yml,yaml}]
indent_size = 2

# Specific rules for JSX, TSX, JS, and TS files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single